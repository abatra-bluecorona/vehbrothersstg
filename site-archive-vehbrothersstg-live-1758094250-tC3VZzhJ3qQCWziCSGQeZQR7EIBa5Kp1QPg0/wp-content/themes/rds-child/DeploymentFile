pipeline {
    agent {
        label 'rds-dev'
    }

    environment {
        CI = 'false'
    }

    stages {
        stage('Deploying To Dev Server') {
            when {
                expression { env.CHANGE_TARGET == 'dev' }
            }
            
            steps {

                    writeFile file: '.env', text: '''
                   
                    WPE_ENV=rdscorepagedev
                    REMOTE_PATH=wp-content/themes/rds-child/
                    SRC_PATH=.
                    PHP_LINT=TRUE
                    CACHE_CLEAR=TRUE
		                  
	                '''
               
                    echo 'Copying files to WP-EngineServer'
                    sh 'docker pull wpengine/site-deploy'
                    sh '''docker run --rm \\
                        -e WPE_SSHG_KEY_PRIVATE="$(cat /home/ec2-user/.ssh/wpengine_ed25519)" \\
                        --env-file ./.env \\
                        -v $(pwd):/site \\
                        --workdir=/site \\
                        wpengine/site-deploy:latest'''                        
                        
                        deleteDir()                   
                        
                
            }
        }

        stage('Deploying To Staging Server') {
            when {
                expression { env.CHANGE_TARGET == 'stag' }
            }
            
            steps {

                    writeFile file: '.env', text: '''
                   
                    WPE_ENV=rdscorepagestg
                    REMOTE_PATH=wp-content/themes/rds-child/
                    SRC_PATH=.
                    PHP_LINT=TRUE
                    CACHE_CLEAR=TRUE
		                  
	                '''
               
                    echo 'Copying files to WP-EngineServer'
                    sh 'docker pull wpengine/site-deploy'
                    sh '''docker run --rm \\
                        -e WPE_SSHG_KEY_PRIVATE="$(cat /home/ec2-user/.ssh/wpengine_ed25519)" \\
                        --env-file ./.env \\
                        -v $(pwd):/site \\
                        --workdir=/site \\
                        wpengine/site-deploy:latest'''                        
                        
                        deleteDir()                   
                        
                
            }
        }

        stage('Deploying To Prod Install') {
            when {
                expression { env.CHANGE_TARGET == 'live' }
            }
            steps {
                script {
                    def remoteExists = sh(script: 'git remote -v | grep production', returnStatus: true)
                    if (remoteExists == 0) {
                        echo "Remote 'production' already exists, skipping remote add."
                    } else {
                        sh "git remote add production git@git.wpengine.com:rdscorpagbuild.git"  
                    }
                    // Proceed with other steps
                    sh "git push -f -v production HEAD:refs/heads/master"
                }
            }
        }
    }
}